@model SelahSeries.Models.Event
@{
    ViewData["Title"] = "Event";
    Layout = "~/Views/EMI/_EMILayout.cshtml";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>@Model.Title</h2>
                <div class="page_link">
                    <a href="~/emeraldlight/index">Home</a>
                    <a href="~/emeraldlight/event/@Model.EventId">Event</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Event Details Area =================-->
<section class="event_details_area p_120">
    <div class="container">
        <div class="event_d_inner">
            <img class="img2" max-width="75%" height="auto" src="/uploads/@Model.ImgUrl" alt="">
                <div class="row event_text_inner">
                    <div class="col-lg-4">
                        <div class="left_text">
                            <ul class="list">
                                <li><a href="#"><i class="lnr lnr-calendar-full"></i>@Model.Time</a></li>
                                <li><a href="#"><i class="lnr lnr-apartment"></i>@Model.Location</a></li>
                                <li><a href="#"><i class="lnr lnr-location"></i>@Model.Country</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="right_text">
                            <h4>Spreading Peace to world</h4>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>
<!--================End Event Details Area =================-->
<style>
    .img2{
        width:75%;
    }
</style>