@if(ViewBag.Error != null || ViewBag.Alert != null){
<div style="text-align:center;" class="alert @( ViewBag.Alert != null ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
    <strong> @if(ViewBag.Alert != null){ @ViewBag.Alert }else{@ViewBag.Error} </strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}