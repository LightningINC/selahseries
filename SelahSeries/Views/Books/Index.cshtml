<!-- Start Top Search -->
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
        </div>
    </div>
    <button type="button" class="btn pmd-btn-fab pmd-ripple-effect btn-secondary pmd-btn-raised"><i class="material-icons pmd-sm">add_shopping_cart</i></button>
</div>
<!-- End Top Search -->
<!-- Start All Title Box -->
<div class="all-title-box" style="margin-top:69px">
    <div class="container">
        <div class="row">
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Page  -->
<div class="shop-box-inner">

    <div class="container">
        <div class="row" style="margin-bottom: 10px;
    color: #4177b0;
    font-size: 16px;"><p style="margin: 0px 20px"><span style="color:#ad001c">**</span> Note: Only residents in Nigeria (Ile-Ife, Ibadan and Ilesha ) can order for hard copy books. <span style="color:#ad001c">**</span></pstyle="></div>
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
                <div class="right-product-box">
                    <div class="product-item-filter row">
                        <div class="col-12 col-sm-8 text-center text-sm-left">
                            <div class="toolbar-sorter-right">
                                <span>All books</span>

                            </div>
                        </div>
                        <div class="col-12 col-sm-4 text-center text-sm-right view_style">
                            <ul class="nav nav-tabs ml-auto">
                                <li>
                                    <a class="nav-link active" href="#grid-view" data-toggle="tab"> Grid View </a>
                                </li>
                                <li>
                                    <a class="nav-link" href="#list-view" data-toggle="tab"> List View </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-categorie-box">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade show active" id="grid-view">
                                <div class="row">
                                    @foreach (var item in books)
                                    {
                                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                            @if (item.IsHardBook == true)
                                            {

                                                Products.Add(new Book()
                                                {
                                                    Title = item.Title,
                                                    Price = item.Price
                                                });


                                            }
                                            @foreach (var el in Products)
                                            {
                                                productArray.Add(el);
                                            }
                                            <div class="products-single fix">
                                                <div class="box-img-hover">
                                                    <div class="type-lb">
                                                        @if (item.IsHardBook == true)
                                                        {
                                                            <p class="sale">Sale</p>
                                                        }
                                                    </div>
                                                    <img class="book_image" src="~/Uploads/@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-fluid" alt="Image">
                                                    <div class="mask-icon">
                                                        <ul>
                                                            <li><button type="button" class="nv-link" style="cursor:pointer" data-toggle="modal" data-target="#@item.BookId">View</button></li>
                                                            @*<li><a class="nav-link" href="~/books/index#list-view" data-toggle="tab">View</a></li>*@
                                                        </ul>

                                                        @if (item.IsHardBook == true)
                                                        {
                                                            <a class="add-cart cart" style="cursor:pointer">Add to Cart</a>
                                                        }

                                                    </div>
                                                    <!-- Modal -->
                                                    <div class="modal fade" id="@item.BookId" role="dialog">
                                                        <div class="modal-dialog modal-lg">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h4 class="modal-title">@item.Title</h4>
                                                                    <span style="margin-left:15px"><h4 class="modal-title">(Book Description)</h4></span>
                                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>@item.Description</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="why-text">
                                                <h4>@item.Title</h4>
                                                @if (item.IsHardBook == true)
                                                {
                                                <h5 id="pricee">₦@item.Price</h5>
                                                }
                                                <a class="btn hvr-hover download_btn" href="~/Uploads/@item.BookUrl" download>Download</a>
                                            </div>
                                        </div>





                                    }
                                    @{
                                        string dataStr = JsonConvert.SerializeObject(@productArray, Formatting.None);
                                    }
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="list-view">
                                @foreach (var item in books)
                                {
                                    <div class="list-view-box">
                                        <div class="row">
                                            <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
                                                <div class="products-single fix">
                                                    <div class="box-img-hover">
                                                        <div class="type-lb">
                                                            @if (item.IsHardBook == true)
                                                            {
                                                                <p class="sale">Sale</p>
                                                            }
                                                        </div>
                                                        <img style="height:363px" src="~/Uploads/@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-fluid" alt="Image">
                                                        <div class="mask-icon">

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
                                                <div class="why-text full-width">
                                                    <h4>@item.Title</h4>
                                                    @if (item.IsHardBook == true)
                                                    {
                                                    <h5>₦@item.Price</h5>
                                                    }
                                                    <p>
                                                        @item.Description
                                                    </p>
                                                    @if (item.IsHardBook == true)
                                                    {
                                                        <a class="add-cart cart btn hvr-hover" >Add to Cart</a>
                                                    }
                                                    <a class="btn hvr-hover" href="~/uploads/@item.BookUrl" download>Free Download</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div data-products="@Products[0]"></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
                <div class="product-categori">
                    <div class="second search-product">
                        <form action="#">
                            <input class="searchh form-control" placeholder="Search here..." type="text">
                            <button type="submit"> <i class="fa fa-search"></i> </button>
                        </form>
                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h4 style="font-weight:400">Categories</h4>
                        </div>
                        <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
                            @*<div class="list-group-collapse sub-men">
                                    <a class="list-group-item list-group-item-action" href="#sub-men1" data-toggle="collapse" aria-expanded="true" aria-controls="sub-men1">
                                        Fruits & Drinks <small class="text-muted">(100)</small>
                                    </a>
                                    <div class="collapse show" id="sub-men1" data-parent="#list-group-men">
                                        <div class="list-group">
                                            <a href="#" class="list-group-item list-group-item-action active">Fruits 1 <small class="text-muted">(50)</small></a>
                                            <a href="#" class="list-group-item list-group-item-action">Fruits 2 <small class="text-muted">(10)</small></a>
                                            <a href="#" class="list-group-item list-group-item-action">Fruits 3 <small class="text-muted">(10)</small></a>
                                            <a href="#" class="list-group-item list-group-item-action">Fruits 4 <small class="text-muted">(10)</small></a>
                                            <a href="#" class="list-group-item list-group-item-action">Fruits 5 <small class="text-muted">(20)</small></a>
                                        </div>
                                    </div>
                                </div>*@
                            <a href="#" class="list-group-item list-group-item-action"> Relationship & Marriage</a>
                            <a href="#" class="list-group-item list-group-item-action"> Sports </a>
                            <a href="#" class="list-group-item list-group-item-action"> Politics </a>
                            <a href="#" class="list-group-item list-group-item-action"> Career </a>
                            <a href="#" class="list-group-item list-group-item-action"> General </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button>
            <a href="~/books/cart" class="float">
                <i class="fa fa-shopping-cart my-float"></i>
            </a>
        </button>
    </div>
</div>
     
