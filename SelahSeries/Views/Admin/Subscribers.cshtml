@model IEnumerable<SelahSeries.Models.EmailSubscription>

@{
    ViewData["Title"] = "Subscribers";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Subscribers</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th></th>
            <th>
                Email Address of Subscribers
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var (item, index) in Model.Select((v, i) => (v, i))) {
        <tr>
            <td>@(index + 1)</td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriberEmail)
            </td>
            @*<td>
            <a asp-action="Delete" asp-route-id="@item.EmailSubscriptionId">Delete</a>
        </td>*@
        </tr>
}
    </tbody>
</table>
