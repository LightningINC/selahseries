

@{
    ViewData["Title"] = "Volunteer";
    Layout = "~/Views/EMI/_EMILayout.cshtml";
}

@section AddToHead {

    <!-- Vendor CSS-->
    <link href="~/EMI/contact/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/EMI/contact/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/EMI/contact/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/EMI/contact/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/EMI/contact/css/main.css" rel="stylesheet" media="all">
    <script src="~/EMI/contact/js/global.js"></script>
    <script src="~/EMI/contact/vendor/jquery/jquery.min.js"></script>
    <script src="~/EMI/contact/vendor/select2/select2.min.js"></script>
    <script src="~/EMI/contact/vendor/datepicker/moment.min.js"></script>
    <script src="~/EMI/contact/vendor/datepicker/daterangepicker.js"></script>
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                @*<h2>Contact Us</h2>*@
                <div class="page_link">
                    <a href="~/emeraldlight/index">Home</a>
                    <a href="~/emeraldlight/volunteer">Volunteer</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->

<div class="container">
    <div class="featured">
        <div class="card card-2">
            <div class="card-heading-2"></div>
            <div class="card-body">
                @await Html.PartialAsync("AlertViewPartial")

                <h2 class="title">Join us at Emerald Light Initiative</h2>

                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <input class="input--style-2" type="text" placeholder="Full name" name="fullname" required>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                <div class="rs-select2 js-select-simple select--no-search">
                                    <select name="age" required>
                                        <option disabled="disabled" selected="selected" value="">Age</option>
                                        <option value="16-20">16-20</option>
                                        <option value="21-25">21-25</option>
                                        <option value="26-30">26-30</option>
                                        <option value="31-35">31-35</option>
                                        <option value="35-46">36-45</option>
                                        <option value="47-100">46 & above</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <input class="input--style-2 phone" type="number" placeholder="Phone Number" name="phone">
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <input class="input--style-2" type="email" placeholder="Email" name="email" required>
                    </div>
                    <div class="input-group">
                        <input class="input--style-2" type="text" placeholder="Your address" name="address">
                    </div>
                    <div class="input-group">
                        <textarea class="input--style-2" name="message" placeholder="Why do you want to join?" required></textarea>
                    </div>

                    <div class="p-t-30">
                        <button class="btn btn--radius btn-danger" type="submit">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




<style>
    .col-2 {
        padding-left: 0px;
        padding-right: 0px;
        flex: inherit;
        max-width: inherit;
    }

    .featured {
        position: relative;
        background: #fff;
        margin-top: -49px;
        width: 80%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 130px;
        z-index: 2;
    }

    textarea {
        width: 100%;
        height: 140px;
        border: none;
    }

    .text-block {
        background-color: rgba(0,0,0,0.5);
        color: white;
        padding: 29px;
        font-size: 40px;
        border-radius: 29px;
    }

    .nice-select {
        border: none;
    }
</style>
