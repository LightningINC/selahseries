<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="img/favicon.png" type="image/png">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/EMI/css/bootstrap.css">
    <link rel="stylesheet" href="~/EMI/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/EMI/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/EMI/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/EMI/vendors/lightbox/simpleLightbox.css">
    <link rel="stylesheet" href="~/EMI/vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="~/EMI/vendors/animate-css/animate.css">
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
    <!-- main css -->
    <link rel="stylesheet" href="~/EMI/css/style.css">
    <link rel="stylesheet" href="~/EMI/css/responsive.css">
</head>
<body>

    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="top_menu row m0">
        </div>
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="~/emeraldlight"><img src="" alt="">Title.....</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto">
                            @{
                                var currentRoute = Context.Request.Path;
                                var homeLinks = new List<string> { "home/index", "/", "home" };
                                var homeLink = homeLinks.Any(x => x.Contains(currentRoute.ToString().ToLower()));
                                var aboutLink = currentRoute.ToString().Contains("About", StringComparison.OrdinalIgnoreCase);
                                var supportLink = currentRoute.ToString().Contains("Support", StringComparison.OrdinalIgnoreCase);
                                var contactLink = currentRoute.ToString().Contains("Contact", StringComparison.OrdinalIgnoreCase);
                                var bookLink = currentRoute.ToString().Contains("book", StringComparison.OrdinalIgnoreCase);

                            }
                            <li class="nav-item active"><a class="nav-link" href="~/emeraldlight">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/emeraldlight/about">About</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/emeraldlight/events">Events</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/emeraldlight/gallery">Gallery</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Volunteer</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================Header Menu Area =================-->

    @RenderBody()

    <!--================ start footer Area  =================-->
    <footer class="footer-area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">About Initiative</h6>
                        <p color="#777">The world has become so self centered that people are blind to the needs of others around them. Join us to brighten up the face and lives of women including teenagers who have been victims of societal rejection. </p>
                        
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">Navigation Links</h6>
                        <div class="row">
                            <div class="col-8">
                                <ul class="list">
                                    <li><a href="~/emeraldlight/index">Home</a></li>
                                    <li><a href="~/emeraldlight/gallery">Gallery</a></li>
                                    <li><a href="~/emeraldlight/volunteer">Volunteer</a></li>
                                    <li><a href="~/emeraldlight/events">Events</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">Newsletter</h6>
                        <p>For business professionals caught between high OEM price and mediocre print and graphic output, </p>
                        <div id="mc_embed_signup">
                            <form target="_blank" action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01" method="get" class="subscribe_form relative">
                                <div class="input-group d-flex flex-row">
                                    <input name="EMAIL" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address '" required="" type="email">
                                    <button class="btn sub-btn"><span class="lnr lnr-location"></span></button>
                                </div>
                                <div class="mt-10 info"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget instafeed">
                        <h6 class="footer_title"></h6>
                        <ul class="list instafeed d-flex flex-wrap">
                            <li><img src="~/EMI/img/instagram/Image-01.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-02.jpg" alt=""></li>
                            <li><img src="~/EMII/img/instagram/Image-03.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-04.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-05.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-06.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-07.jpg" alt=""></li>
                            <li><img src="~/EMI/img/instagram/Image-08.jpg" alt=""></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="border_line"></div>
            <div class="row footer-bottom d-flex justify-content-between align-items-center">
                <p class="col-lg-8 col-md-8 footer-text m-0 foot_text">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Emerald Light Initiative 
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
                <div class="col-lg-4 col-md-4 footer-social">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-dribbble"></i></a>
                    <a href="#"><i class="fa fa-behance"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <!--================ End footer Area  =================-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/EMI/js/jquery-3.2.1.min.js"></script>
    <script src="~/EMI/js/popper.js"></script>
    <script src="~/EMI/js/bootstrap.min.js"></script>
    <script src="~/EMI/js/stellar.js"></script>
    <script src="~/EMI/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/EMI/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/EMI/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/EMI/vendors/isotope/isotope-min.js"></script>
    <script src="~/EMI/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/EMI/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/EMI/js/mail-script.js"></script>
    <script src="~/EMI/js/theme.js"></script>
    @if (IsSectionDefined("AddToEnd"))
    {
        @RenderSection("AddToEnd", required: false)
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
    .foot_text{
        color:#777;
    }
</style>


