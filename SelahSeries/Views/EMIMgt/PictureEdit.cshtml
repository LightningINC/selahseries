@model SelahSeries.ViewModels.GalleryCreateViewModel
@{
    ViewBag.Title = "Edit Picture Details";
    Layout = "~/views/admin/_AdminLayout.cshtml";
}

@section AddToHead {
    <link rel="stylesheet" type="text/css" href="~/NewFolder2/KothingEditor/build/css/keditor.min.css">
    <style>
        .collapsible {
            background-color: #777;
            color: white;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
        }

            .active, .collapsible:hover {
                background-color: rgba(3, 73, 165, 0.7);
            }

            .collapsible:after {
                content: '\002B';
                color: white;
                font-weight: bold;
                float: right;
                margin-left: 5px;
            }

        .active:after {
            content: "\2212";
        }

        .content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            background-color: rgba(242, 242, 242, 1);
        }

            .content input {
                border: none;
                outline: none;
                border-bottom: solid #D91438 2px;
            }

                .content input active {
                    border-bottom: solid #D91438 3px;
                }
    </style>
}
@section AddToEnd {
    <script src="~/NewFolder2/KothingEditor/app.js" type="module"></script>
    <script src="~/NewFolder2/js/blogmgt.js"></script>

}

<div style="color: #ffcc00; background-color:black;" class="jumbotron text-center">
    <h1 style="color: #ffcc00; background-color:black;">Gallery Management Page <br /> Edit Picture Details  </h1>
</div>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        @await Html.PartialAsync("AlertViewPartial")
        @using (Html.BeginForm("PictureEdit", "EMIMgt", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PictureId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreatedAt" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImgUrl" />
            <div class="form-group">
                <button type="button" class="collapsible">Enter Name</button>
                <div class="content">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


            </div>
            <div style="text-align: center;" class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-danger btn-lg" />
            </div>
        }
    </div>
    <div class="col-lg-1"></div>
</div>

<div>
    <a asp-action="GalleryIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
