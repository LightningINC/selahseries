<div class="page_content" style="margin-top:35px">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="myCarousel" class="books carousel slide" data-ride="carousel" data-interval="0">
                    <!-- Carousel indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for carousel items -->

                    <div class="carousel-inner">

                        <div class="item carousel-item active">
                            <div class="row">
                                @foreach (var item in Books_Slide1)
                                {
                                    <div class="col-sm-6">
                                        <div class="thumb-wrapper">
                                            <div class="img-box">
                                                <img src="~/Uploads/@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-responsive img-fluid" alt="">
                                            </div>
                                            <div class="thumb-content">
                                                <h5 style="color:black">@item.Title</h5>
                                                @if (item.IsHardBook == true)
                                                {

                                                    Products.Add(new ShopBook()
                                                    {
                                                        Price = item.Price,
                                                        Tag = item.ImageUrl,
                                                        Title = item.Title,
                                                        InCart = 0
                                                    });


                                                    <p class="item-price">₦@item.Price</p>
                                                    <a class="add-cart cart btn btn-primary">Add to Cart</a>
                                                }
                                                <a href="~/uploads/@item.BookUrl" download class="btn btn-primary">Download</a>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>


